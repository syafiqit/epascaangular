{
  "htmlWhitespaceSensitivity": "ignore",
  "printWidth": 120,
  "tabWidth": 4,
  "useTabs": true,
  "semi": true,
  "quoteProps": "as-needed",
  "trailingComma": "none",
  "bracketSpacing": true,
  "jsxBracketSameLine": true,
  "arrowParens": "always",
  "overrides": [
      {
          "files": "*.component.html",
          "options": {
              "parser": "angular"
          }
      },
      {
          "files": "*.html",
          "options": {
              "parser": "html"
          }
      }
  ]
}
